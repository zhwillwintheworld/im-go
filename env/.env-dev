# ============================================
# IM 系统开发环境配置
# ============================================
# 使用方式:
#   source env/.env-dev  (在启动脚本中)
#   或在各模块 config 中读取这些环境变量
# ============================================

# --------------------------------------------
# Redis 配置
# --------------------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_POOL_SIZE=50

# --------------------------------------------
# PostgreSQL 配置
# --------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DB=im_db
POSTGRES_MAX_OPEN_CONNS=50
POSTGRES_MAX_IDLE_CONNS=10

# --------------------------------------------
# NATS 配置
# --------------------------------------------
NATS_URL=nats://localhost:4222
NATS_MAX_RECONNECTS=-1
NATS_RECONNECT_WAIT=2s

# --------------------------------------------
# JWT 配置 (Web + Access 共用)
# --------------------------------------------
JWT_SECRET=8Z9X7s2kQ8a9b7d6f5g4h3j2k1l0p9o8i7u6y5t4b8n9m0l1k2j3h4g5f6d7s8a9s7d6f5g4h3j2k=
JWT_ACCESS_EXPIRE=168h
JWT_REFRESH_EXPIRE=720h

# --------------------------------------------
# 日志配置
# --------------------------------------------
LOG_LEVEL=debug
LOG_FORMAT=json

# --------------------------------------------
# 各服务端口
# --------------------------------------------
ACCESS_PORT=8443
WEB_PORT=8082
DESKTOP_PORT=5173

# --------------------------------------------
# TLS 证书 (开发环境)
# --------------------------------------------
TLS_CERT_FILE=../../env/dev-certs/localhost.crt
TLS_KEY_FILE=../../env/dev-certs/localhost.key
